<div id="pageTitle">
    <h1>New Alarms</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @alarms.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Label: </td>
    			  <td class="itemValue"><input type="text" name="alarms[label]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Start time: </td>
    			  <td class="itemValue"><input type="text" name="alarms[start_time]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Duration: </td>
    			  <td class="itemValue"><input type="text" name="alarms[duration]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Sound: </td>
    			  <td class="itemValue"><input type="text" name="alarms[sound]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Repeatable: </td>
    			  <td class="itemValue"><input type="text" name="alarms[repeatable]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>