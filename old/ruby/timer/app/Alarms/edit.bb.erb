<div id="pageTitle">
		<h1>Edit <%= @alarms.label%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @alarms.object %>
    <%= link_to "Delete", :action => :delete, :id => @alarms.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @alarms.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Label: </td>
              			<td class="itemValue"><input type="text" name="alarms[label]" value="<%= @alarms.label %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Start time: </td>
              			<td class="itemValue"><input type="text" name="alarms[start_time]" value="<%= @alarms.start_time %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Duration: </td>
              			<td class="itemValue"><input type="text" name="alarms[duration]" value="<%= @alarms.duration %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Sound: </td>
              			<td class="itemValue"><input type="text" name="alarms[sound]" value="<%= @alarms.sound %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Repeatable: </td>
              			<td class="itemValue"><input type="text" name="alarms[repeatable]" value="<%= @alarms.repeatable %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
